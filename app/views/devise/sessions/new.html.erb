<body style="background-color:#1d1e1f;">
<div class = "container">
  <h2 class = "whiteTxt">Log in</h2>

  <br/>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field form-group">
      <%= f.email_field :email, class: "form-control", placeholder: "Email", autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field form-group">
      <%= f.password_field :password, class: "form-control", placeholder: "Password", autocomplete: "current-password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field form-group form-check">
        <%= f.check_box :remember_me, class: "form-check-input" %>
        <%= f.label :remember_me, class: "whiteTxt" %>
      </div>
    <% end %>

    <br/>

    <div class="actions">
      <%= f.submit "Log in", class:"btn btn-success" %>
    </div>
  <% end %>

  <br/>
  <br/>

  <div class="d-grid gap-2 col-6 mx-auto">
    <%= render "devise/shared/links" %>
  </div>
</div>
